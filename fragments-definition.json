{
    "family": "fragments",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "fragments",
        "image": "${ECR_REGISTRY}/${ECR_REPO}:${VERSION_TAG}",
        "essential": true,
        "portMappings": [
          {
            "containerPort": 8080,
            "hostPort": 8080,
            "protocol": "tcp"
          }
        ],
        "environment": [
          {
            "name": "NODE_ENV",
            "value": "production"
          },
          {
            "name": "PORT",
            "value": "8080"
          },
          {
            "name": "AWS_REGION",
            "value": "us-east-1"
          },
          {
            "name": "AWS_DYNAMODB_TABLE_NAME",
            "value": "fragments"
          },
          {
            "name": "AWS_S3_BUCKET_NAME",
            "value": "fragments-bucket"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/fragments",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
  }